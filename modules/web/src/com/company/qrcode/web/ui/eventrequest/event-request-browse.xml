<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://eventRequestBrowse.caption"
        focusComponent="eventRequestsTable"
        messagesPack="com.company.qrcode.web.ui.eventrequest">
    <data readOnly="true">
        <collection id="eventRequestsDc"
                    class="com.company.qrcode.entity.EventRequest">
            <view extends="_local">
                <property name="eventHall" view="_minimal"/>
            </view>
            <loader id="eventRequestsDl">
                <query>
                    <![CDATA[select e from qrcode$EventRequest e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="eventRequestsTable"
            spacing="true">
        <filter id="filter"
                applyTo="eventRequestsTable"
                dataLoader="eventRequestsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="eventRequestsTable"
                    width="100%"
                    dataContainer="eventRequestsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="eventCode"/>
                <column id="eventName"/>
                <column id="eventHall"/>
                <column id="eventDate"/>
                <column id="timeStart"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="eventRequestsTable.create"/>
                <button id="editBtn" action="eventRequestsTable.edit"/>
                <button id="removeBtn" action="eventRequestsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
