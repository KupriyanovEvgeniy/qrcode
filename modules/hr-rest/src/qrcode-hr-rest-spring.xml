<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd"
       xmlns:context="http://www.springframework.org/schema/context">

    <bean class="com.haulmont.cuba.core.sys.CubaPropertyPlaceholderConfigurer"/>

    <!-- Annotation-based beans -->
    <context:component-scan base-package="com.company.qrcode.hr.rest"/>
    <bean id="qrcode_proxyCreator" class="com.haulmont.thesis.hr.rest.sys.remoting.HrRestRemoteProxyBeanCreator">
        <property name="serverSelector" ref="cuba_ServerSelector"/>
        <property name="remoteServices">
            <map>
                <entry key="qrcode_EventCodeService" value="com.company.qrcode.service.EventCodeService"/>
                <entry key="qrcode_EventQrCodeService" value="com.company.qrcode.service.EventQrCodeService"/>
            </map>
        </property>
    </bean>

</beans>